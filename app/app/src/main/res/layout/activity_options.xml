<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="32dp"
    android:background="@drawable/space_bg">

    <!-- ① Leaderboards -->
    <Button
        android:id="@+id/btn_leaderboards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaderboards"
        android:layout_marginBottom="24dp"/>

    <!-- ② Two-button Slow (current behavior) -->
    <Button
        android:id="@+id/btn_buttons_slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buttons (Slow)"
        android:layout_marginBottom="24dp"/>

    <!-- ③ Two-button Fast -->
    <Button
        android:id="@+id/btn_buttons_fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buttons (Fast)"
        android:layout_marginBottom="24dp"/>

    <!-- ④ Sensor Mode -->
    <Button
        android:id="@+id/btn_sensor_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sensor Mode"/>
</LinearLayout>
